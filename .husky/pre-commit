# Pre-commit hook for comprehensive quality gates

echo "ğŸ” Running comprehensive pre-commit quality gates..."

# Check if we have staged files
staged_files=$(git diff --cached --name-only)
if [ -z "$staged_files" ]; then
    echo "âš ï¸  No staged files found. Skipping pre-commit hooks."
    exit 0
fi

echo "ğŸ“ Staged files:"
echo "$staged_files" | sed 's/^/  - /'

# Run lint-staged for code formatting and linting
echo "ğŸ“ Formatting and linting staged files..."
npx lint-staged || {
    echo "âŒ Linting failed. Please fix the issues and try again."
    exit 1
}

# Run TypeScript type checking
echo "ğŸ” Type checking TypeScript files..."
npm run type-check || {
    echo "âŒ Type checking failed. Please fix type errors and try again."
    exit 1
}

# Run security audit (quick check)
echo "ğŸ›¡ï¸  Running security audit..."
npm audit --audit-level=high --production || {
    echo "âš ï¸  Security vulnerabilities found. Consider running 'npm audit fix'"
    # Don't exit on audit failures for pre-commit, just warn
}

# Run Python linting if Python files are staged
python_files=$(echo "$staged_files" | grep -E '\.py$' || true)
if [ -n "$python_files" ]; then
    echo "ğŸ Running Python linting..."
    npm run lint:py || {
        echo "âŒ Python linting failed. Please fix the issues and try again."
        exit 1
    }
fi

# Run unit tests
echo "ğŸ§ª Running unit tests..."
npm run test:run || {
    echo "âŒ Unit tests failed. Please fix the failing tests and try again."
    exit 1
}

# Build validation (ensure code compiles)
echo "ğŸ—ï¸  Validating build..."
npm run build || {
    echo "âŒ Build failed. Please fix build errors and try again."
    exit 1
}

echo "âœ… All pre-commit quality gates passed successfully!"
echo "ğŸ’¡ Changes are ready for commit."
