# Environment Configuration Template for TrainingLab
# Copy this file to .env and configure your local values

# Application Configuration
NODE_ENV=development
PYTHON_ENV=development
APP_VERSION=1.0.0
APP_NAME=TrainingLab

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG_MODE=true
CORS_ORIGINS=*

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
CACHE_TTL=3600

# Database Configuration (Future use)
DATABASE_URL=sqlite:///traininglab.db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=traininglab
DB_USER=training_user
DB_PASSWORD=dev_password

# Monitoring and Logging
LOG_LEVEL=INFO
ENABLE_METRICS=true
PROMETHEUS_PORT=9090

# Security Settings
SECRET_KEY=your-secret-key-change-in-production
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
RATE_LIMIT_PER_MINUTE=60

# MCP Configuration
MCP_CONFIG_PATH=mcp_config.json
MCP_HEALTH_CHECK_INTERVAL=30
MCP_MAX_RETRY_ATTEMPTS=3

# Performance Settings
MAX_UPLOAD_SIZE_MB=10
REQUEST_TIMEOUT_SECONDS=30
WORKER_PROCESSES=1

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_EXPERIMENTAL_UI=false
ENABLE_PERFORMANCE_MONITORING=true