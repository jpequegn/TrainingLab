{
  "name": "wkolibrary",
  "version": "1.0.0",
  "description": "A web-based application that loads Zwift workout files (.zwo) and displays them as interactive graphs.",
  "type": "module",
  "main": "script.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "dev": "concurrently \"nodemon\" \"browser-sync start --config bs-config.js\"",
    "dev:server": "nodemon",
    "dev:frontend": "browser-sync start --config bs-config.js",
    "dev:simple": "python3 server.py",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:staged": "prettier --write $(git diff --cached --name-only --diff-filter=ACMR)",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:ts": "tsc --noEmit",
    "lint:py": "ruff check .",
    "lint:all": "npm run lint && npm run lint:ts && npm run format:check",
    "audit": "npm audit --audit-level=moderate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jpequegn/WkoLibrary.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jpequegn/WkoLibrary/issues"
  },
  "homepage": "https://github.com/jpequegn/WkoLibrary#readme",
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/chart.js": "^2.9.41",
    "@types/node": "^24.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "browser-sync": "^3.0.4",
    "concurrently": "^9.2.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.2.0",
    "jsdom": "^26.1.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "chartjs-plugin-annotation": "^3.1.0",
    "playwright": "^1.54.1"
  }
}
